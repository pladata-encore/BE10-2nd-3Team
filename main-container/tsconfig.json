{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "*": ["./@mf-types/*"],
      "LandingPageApp/App": ["../Landing-Page/types/landing-page-app.d.ts"]
    }
  },
  "include": ["src", "../Landing-Page/types", "../Landing-Page/LandingPage", "../Landing-Page/src/index.tsx"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
